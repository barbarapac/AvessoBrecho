<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avesso</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <div class="containerCSS">
            <div id="div_topo">
                <div id="div_logo">
                    <a class="aMenu" asp-area="" asp-controller="Produto" asp-action="PesquisaProduto"><img src="~/images/Brand - Horizontal.svg" id="logo" /></a>
                </div>

                <div id="div_menu">
                    <a asp-area="" asp-controller="Produto" asp-action="PesquisaProduto">Novidades</a>
                    <a class="aMenu" asp-area="" asp-controller="Produto" asp-action="PesquisaProduto" asp-route-pesquisa="Roupas">Roupas</a>
                    <a class="aMenu" asp-area="" asp-controller="Produto" asp-action="PesquisaProduto" asp-route-pesquisa="Calçados">Calçados</a>
                    <a class="aMenu" asp-area="" asp-controller="Produto" asp-action="PesquisaProduto" asp-route-promocao="true">Promoções</a>
                </div>

                <div id="div_icones">
                    <a asp-controller="Pedido" asp-action="carrinho"><img src="~/images/icons - Shopping.svg" id="Shop" /></a>
                    <a asp-area="" asp-controller="Produto" asp-action="PesquisaProduto"><img src="~/images/icons - User.svg" id="User" /></a>
                </div>
            </div>
        </div>
    </header>

    <div class="containerCSS">
        @RenderBody()
    </div>

    <footer>
        <div class="containerCSS">
            <div id="div_footer">
                <div id="div_iconfooter">
                    <img src="~/images/Icons - Instagram.svg" />
                    <img class="imgIconFooter" src="~/images/Icons - Facebook.svg" />
                    <img class="imgIconFooter" src="~/images/Icons - Twitter.svg" />
                    <img class="imgIconFooter" src="~/images/Icons - Whatsapp.svg" />
                    <label class="labelIconFooter">/avesso.brecho</label>
                </div>

                <div id="div_logofooter">
                    <img src="~/images/Brand - Vertical.svg" />
                </div>

                <div id="div_copyrigth">
                    <label class="labelCopyrigthFooter">&copy; 2021 - Todos os direitos reservados.</label>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
