                    <a class="aMenu" asp-area="" asp-controller="Home" asp-action="Index">Promoções</a>
                </div>

                <div id="div_icones">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/icons - Shopping.svg" id="Shop" /></a>
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/icons - User.svg" id="User" /></a>
                </div>
            </div>
        </div>
